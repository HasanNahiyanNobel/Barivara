<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/defaultBackground"
	tools:context=".landlord.HouseAttributes">

	<TextView
		android:id="@+id/textView6"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"
		android:gravity="center"
		android:text="@string/houseInfo"
		android:textAppearance="@style/TextAppearance.AppCompat.Large"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TableLayout
		android:id="@+id/tableLayout"
		android:layout_width="378dp"
		android:layout_height="486dp"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="32dp"
		android:layout_marginRight="32dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView6">

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/textView3"
				android:layout_width="161dp"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical"
				android:text="@string/typeOfHouse" />

			<ToggleButton
				android:id="@+id/toggleButton2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textOff="@string/Mess"
				android:textOn="@string/familyHouse" />

		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/textView7"
				android:layout_width="161dp"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical"
				android:text="@string/numberOfBedrooms" />

			<EditText
				android:id="@+id/editText4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="10"
				android:inputType="number" />
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/textView9"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="@string/numberOfBaths" />

			<EditText
				android:id="@+id/editText6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="10"
				android:inputType="number" />
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/textView1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="@string/diningRoom" />

			<CheckBox
				android:id="@+id/checkBox3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="@string/doesExist" />

		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/textView13"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="@string/cookingRoom" />

			<CheckBox
				android:id="@+id/checkBox4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="@string/doesExist" />
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		</TableRow>

	</TableLayout>

	<Button
		android:id="@+id/button5"
		style="@style/BorderedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="16dp"
		android:onClick="goToRentAmount"
		android:text="@string/button_ok"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>